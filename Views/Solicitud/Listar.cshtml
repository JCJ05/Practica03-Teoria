@model List<Solicitudes>
@{  
    Layout = "_Plantilla";
    ViewData["Title"] = "Registro";
}

<div class="text-center">
    <h1 class="display-4">Productos a comprar</h1>
    

    @if (Model.Count == 0) {
        <p class="text-center">No hay productos disponibles registra tu producto y apoya a la comunidas</p>
        <a class="btn btn-info" asp-controller="Solicitud" asp-action="Registro" > Registrar Producto </a>
    }
    
    

<h1>@ViewData["Title"]</h1>
  <div class="container">
    <h1>@ViewData["Message"]</h1>
    <div class="row">
      <div class="col">
        <div id="products" class="mb-3">
          <div class="row">
            @foreach (var item in Model) {
            <div class="col-sm-4">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="card-img-actions">
                    <img class="img-responsive" width="96" height="150"
                       src="@item.foto" alt="Icono"  />
                  </div>
                </div>
                <div class="card-body">
                  <h5 class="card-title">@Html.DisplayFor(modelItem => item.nombre)</h5>
                  <p class="card-text">@Html.DisplayFor(modelItem => item.precio)</p>
                  <p class="card-text">@Html.DisplayFor(modelItem => item.descripcion)</p>
                  <p class="card-text">@Html.DisplayFor(modelItem => item.celular)</p>
                  <p class="card-text">@Html.DisplayFor(modelItem => item.lugar)</p>
                  <p class="card-text">@Html.DisplayFor(modelItem => item.fecha)</p>
                  <p class="card-text">@Html.DisplayFor(modelItem => item.Categorias.nombre)</p>
                  
                </div>
              </div>
            </div>
            }
         </div>
        </div>
      </div>
    </div>
  </div> 